{
  "manifest_version": 3,
  "name": "Playwright Test Results",
  "version": "1.1",
  "description": "View Playwright test results from a local file or GitHub repository",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Playwright Test Results Viewer"
  },
  "permissions": [
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://raw.githubusercontent.com/*",
    "file:///*"
  ]
}
