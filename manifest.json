{
  "manifest_version": 3,
  "name": "Playwright Test Results",
  "version": "1.0",
  "description": "View Playwright test results from a local file",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "file:///*"
  ]
}
